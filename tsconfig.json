{
    "compilerOptions": {
      "jsx": "react",
      "target": "es6", 
      "module": "commonjs", 
      "strict": true,        
      "esModuleInterop": true,    
      "skipLibCheck": true,     
      "forceConsistentCasingInFileNames": true, 
      "moduleResolution": "node",  
      "outDir": "./dist",         
      "rootDir": "./src",
      "baseUrl": "./",
      "paths": {
        "@src/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*",
      "__tests__/**/*"  
    ],
    "exclude": [
      "node_modules",   
      "**/*.spec.ts"   
    ]
  }
  